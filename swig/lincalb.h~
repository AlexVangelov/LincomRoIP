/* File : example.h */


class LinCallback {
public:
	virtual ~LinCallback() {  }
	virtual void pager_cb() {  }
};


class Caller {
private:
	LinCallback *_callback;
public:
	Caller(): _callback(0) {}
	~Caller() { delCallback(); }
	void delCallback() { delete _callback; _callback = 0; }
	void setCallback(LinCallback *cb) { delCallback(); _callback = cb; }
	void call() { if (_callback) _callback->pager_cb(); }
};

